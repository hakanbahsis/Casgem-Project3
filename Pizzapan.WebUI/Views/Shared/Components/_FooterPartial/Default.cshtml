
@model IEnumerable<CompanyInfo>
<section class="w3l-footers-20">
    <div class="footers20">
        <div class="container">
            <div class="footers20-content">
                <div class="d-grid grid-col-4 grids-content">
                    @foreach (var item in Model)
                    {
                        
                    
                    <div class="column">
                        <h4>Adres</h4>
                        <p class="contact-para3">@item.Address</p>
                        <a href="mailto:hello@w3layouts.com">
                            <p class="contact-mail mt-2">@item.Mail</p>
                        </a>
                    </div>
                    <div class="column">
                        <h4>Telefon</h4>
                        <p>İstediğiniz zaman bizimle iletişime geçebilirsiniz</p>
                        <a href="tel:@item.Phone">
                            <p class="contact-phone mt-2">@item.Phone</p>
                        </a>
                    </div>
                    <div class="column">
                        <h4>Çalışma Saatlerimiz</h4>
                        <p>@item.OpenningDay</p>
                        <p class="mt-2">@item.OpenningHours</p>
                    </div>
                   
                    }
                </div>
                <div class="d-grid grid-col-3 grids-content1 bottom-border">
                    <div class="columns copyright-grid">
                        <p class="copy-footer-29">
                            © 2020 Pizza Pan. All rights reserved | Designed by <a href="https://w3layouts.com">W3layouts</a>
                        </p>
                    </div>
                    <div class="columns text-right social-grid">
                        <ul class="social">
                            <li><a href="https://www.facebook.com/" target="_blank"><span class="fa fa-facebook" aria-hidden="true"></span></a></li>
                            <li><a href="https://www.instagram.com/" target="_blank"><span class="fa fa-instagram" aria-hidden="true"></span></a></li>
                            <li><a href="https://www.twitter.com/" target="_blank"><span class="fa fa-twitter" aria-hidden="true"></span></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>