@model Testimonial
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Referans Ekle</h1>

<form method="post">
    <div class="form-group mb-3">
        <label>Referans Adı</label>
        <input type="text" asp-for="CustomerName" class="form-control" placeholder="Referans Adı" >
    </div>
    <div class="form-group mb-3">
        <label>Başlık</label>
        <input type="text" asp-for="CustomerTitle" class="form-control" placeholder="Başlık" >
    </div>
    <div class="form-group mb-3">
        <label>Yorum</label>
        <input type="text" asp-for="Comment" class="form-control" placeholder="Yorum" >
    </div>
    <div class="form-group mb-3">
        <label>Fotoğraf</label>
        <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Kategori Adı" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <button class="btn btn-success">Kaydet</button>
</form>