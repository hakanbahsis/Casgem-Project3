@model CompanyInfo
@{
    ViewData["Title"] = "AddCompanyInfo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Şirket Bilgisi Ekleme</h1>

<form method="post">
    <div class="form-group mb-3">
        <label>Başlık</label>
        <input type="text" asp-for="Title" class="form-control" placeholder="Başlık" >
    </div>
    <div class="form-group mb-3">
        <label>Telefon Numarası</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Telefon Numarası" >
    </div>
    <div class="form-group mb-3">
        <label>Mail Adresi</label>
        <input type="text" asp-for="Mail" class="form-control" placeholder="Mail Adresi">
    </div>
    <div class="form-group mb-3">
        <label>Adres</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Adres">
    </div>
    <div class="form-group mb-3">
        <label>Çalışma Günleri</label>
        <input type="text" asp-for="OpenningDay" class="form-control" placeholder="Çalışma Günleri">
    </div> 
    <div class="form-group mb-3">
        <label>Çalışma Saatleri</label>
        <input type="text" asp-for="OpenningHours" class="form-control" placeholder="Çalışma Saatleri" >
    </div>
    <div class="form-group mb-3">
        <label>Harita Bilgisi</label>
        <input type="text" asp-for="MapInfo" class="form-control" placeholder="Harita Bilgisi">
    </div>
   
    <button class="btn btn-success">Kaydet</button>
</form>
