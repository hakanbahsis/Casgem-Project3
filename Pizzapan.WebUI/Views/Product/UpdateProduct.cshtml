@model Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Ürün Güncelleme</h1>
<form method="post">
    @Html.HiddenFor(x=>x.ProductId)
    <div class="form-group mb-3">
        <label>Ürün Adı</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Kategori Adı" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div class="form-group mb-3">
        <label>Ürün Açıklaması</label>

        <input type="text" asp-for="Description" class="form-control" placeholder="Kategori Adı" aria-label="Username" aria-describedby="basic-addon1">
    </div>
    <div class="form-group mb-3">
        <label>Ürün Fiyatı</label>

        <input type="text" asp-for="Price" class="form-control" placeholder="Kategori Adı" aria-label="Username" aria-describedby="basic-addon1">
    </div>
 
    <div class="form-group mb-3">
        <label>Ürün Kategori</label>

        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Category,"Kategori Seçiniz", new
        { @class="form-control" })
    </div>
    <button class="btn btn-success">Kaydet</button>
</form>


