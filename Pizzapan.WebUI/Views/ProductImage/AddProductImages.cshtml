@model ImageFileViewModel
@{
    ViewData["Title"] = "AddProductImages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Fotoğraf Ekleme</h1>
<form method="post" enctype="multipart/form-data">
    <label>Görsel Seçiniz</label>
    <input type="file" class="form-control border" asp-for="Image" />
    <br />
    <button class="btn btn-primary">Görseli Ekle</button>
</form>

