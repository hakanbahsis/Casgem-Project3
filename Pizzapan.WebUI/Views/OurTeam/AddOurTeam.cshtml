@model OurTeam
@{
    ViewData["Title"] = "AddOurTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Takım Üyesi Ekleme</h1>

<div class="container">
    <form method="post" class="form-group">
        <div class="form-group mb-3">
            <label>Adı</label>
            <input type="text" asp-for="Name" class="form-control" placeholder=" Adı" >
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Soyadı</label>
            <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadı" >
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" placeholder="Başlık" >
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label>Fotoğraf</label>
            <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Fotoğraf" >
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <button class="btn btn-success">Kaydet</button>
    </form>
</div>